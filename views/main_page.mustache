<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Movie Reviews</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

  <!-- Top Bar Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">LetterSquared</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addform">Log a Movie</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">Movie List</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Section -->
  <div class="container mt-4">
    <h1 class="text-center">Movies Youâ€™ve Watched</h1>
    <p class="text-center text-muted">Filter your results here</p>

    <!-- Filter Form -->
<form action="/" method="GET" class="row g-3 mb-4 justify-content-center">
  <div class="col-md-3">
    <input type="text" class="form-control" name="search" placeholder="Search movies" value="{{search}}">
  </div>
  <div class="col-md-2">
    <select name="rating" class="form-control">
      <option value="">Select Rating</option>
      <option value="1" {{ratingSelected.1}}>1 Star</option>
      <option value="2" {{ratingSelected.2}}>2 Stars</option>
      <option value="3" {{ratingSelected.3}}>3 Stars</option>
      <option value="4" {{ratingSelected.4}}>4 Stars</option>
      <option value="5" {{ratingSelected.5}}>5 Stars</option>
    </select>
  </div>
  <div class="col-md-2">
    <select name="genre" class="form-control">
      <option value="">Select Genre</option>
      {{#genres}}
        <option value="{{genre}}" {{selected}}>{{genre}}</option>
      {{/genres}}
    </select>
  </div>
  <div class="col-md-2">
    <button type="submit" class="btn btn-primary w-100">Filter</button>
  </div>
</form>

    <!-- Movie List Table -->
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Movie Name</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Favourite</th>
            <th>Review</th>
            <th>Date Watched</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#reviews}}
          <tr>
            <td>{{moviename}}</td>
            <td>{{genre}}</td>
            <td>
              <!-- Loop for Star Ratings -->
              {{#stars}}
                <i class="fas fa-star text-warning"></i>
              {{/stars}}
            </td>
            <td>
              {{#favourite}}
                <i class="fas fa-heart text-danger"></i>
              {{/favourite}}
            </td>
            <td>{{review}}</td>
            <td>{{date_watched}}</td>
            <td>
              <a href="/updateform/{{id}}" class="btn btn-sm btn-warning">Edit</a>
              <a href="/deletereview/{{id}}" class="btn btn-sm btn-danger">Delete</a>
            </td>
          </tr>
          {{/reviews}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>