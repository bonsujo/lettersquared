<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log a Movie - LetterSquared</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .favorite {
            font-size: 20px;
            cursor: pointer;
        }

        .heart {
            width: 24px;
            height: 24px;
            margin-top: 10px;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">LetterSquared</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/addform">Log a Movie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Movie List</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h2>Update Movie Review</h2>
        <p>Share your thoughts about the movie:</p>

        <form action="/updateReview" method="POST" id="movieForm">
            <!-- Movie Title (hidden for simplicity) -->
            <input type="hidden" name="moviename" value="{{moviename}}">

            <div class="mb-3">
                <label for="review" class="form-label">Review</label>
                <textarea class="form-control" id="review" name="review" rows="4" placeholder="Write your review here">{{review}}</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Add to Favorites</label>
                <!-- Heart icon for toggle -->
                <i class="favorite heart" id="heartIcon"></i>
                <!-- Hidden input to track favorite state -->
                <input type="hidden" name="favourite" id="favourite" value="{{favourite}}">
            </div>

            <button type="submit" class="btn btn-primary">Update Review</button>
        </form>

        <div class="container3 mt-3">
            <div class="title7">Â© 2024 LetterSquared. All Rights Reserved.</div>
        </div>
    </div>

    <script>
        window.onload = function () {
            // Get the favourite state from the hidden input field
            const isFavourite = {{favourite}}; // Assuming favourite is passed directly
            const heartIcon = document.getElementById('heartIcon');
            const favouriteInput = document.getElementById('favourite');

            // Set the correct icon based on whether the review is a favourite or not
            if (isFavourite) {
                heartIcon.classList.add('fas', 'fa-heart'); // Filled heart
                heartIcon.classList.remove('far'); // Remove empty heart class
            } else {
                heartIcon.classList.add('far', 'fa-heart'); // Empty heart
                heartIcon.classList.remove('fas'); // Remove filled heart class
            }

            // Toggle favourite state when clicking on the heart
            heartIcon.addEventListener('click', function () {
                if (heartIcon.classList.contains('far')) {
                    heartIcon.classList.remove('far', 'fa-heart');
                    heartIcon.classList.add('fas', 'fa-heart');
                    favouriteInput.value = "1"; // Mark as favourite
                } else {
                    heartIcon.classList.remove('fas', 'fa-heart');
                    heartIcon.classList.add('far', 'fa-heart');
                    favouriteInput.value = "0"; // Unmark as favourite
                }
            });
        };
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
